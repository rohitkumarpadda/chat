{
	"compilerOptions": {
		"lib": ["ES2015"],
		"module": "CommonJS",
		"outDir": "./dist",
		"baseUrl": ".",
		"rootDir": "./src",
		"typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
		"paths": {
			"~/*": ["./src/*"],
			"routes": ["./src/routes"],
			"api": ["src/api"],
			"middleware": ["./src/middleware/"],
			"utils": ["./src/utils/"]
		}
	},
	"exclude": ["node_modules", "dist"],
	"extends": "../../packages/tsconfig/base.json",
	"include": ["src/**/*"]
}
